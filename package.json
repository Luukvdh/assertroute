{
  "name": "assertroute",
  "version": "1.2.20",
  "description": "Typescript fast & easy asserts",
  "license": "ISC",
  "author": "Luuk van den Hoogen",
  "homepage": "https://github.com/Luukvdh/assertroute#readme",
  "bugs": {
    "url": "https://github.com/Luukvdh/assertroute/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luukvdh/assertroute.git"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/assertroute.cjs",
  "module": "./dist/assertroute.esm.js",
  "types": "./dist/assertroute.d.ts",
  "exports": {
    ".": {
      "types": "./dist/assertroute.d.ts",
      "import": "./dist/assertroute.esm.js",
      "require": "./dist/assertroute.cjs",
      "default": "./dist/assertroute.esm.js"
    }
  },
  "unpkg": "dist/assertroute.browser.min.js",
  "jsdelivr": "dist/assertroute.browser.min.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "copydist": "powershell c:\\repo\\packages\\copydist.ps1",
    "build": "npm run clean && node scripts/build.mjs",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:browser": "esbuild src/assertroute.ts --bundle --minify --format=iife --global-name=assertroute --platform=browser --sourcemap --outfile=dist/assertroute.browser.min.js",
    "build:all": "node scripts/build.mjs && npm run build:types && npm run build:browser && powershell c:\\repo\\packages\\copydist.ps1",
    "cmd": "node --experimental-repl-await -i ./scripts/testrepl.mjs"
  },
  "devDependencies": {
    "esbuild": "^0.21.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "assert",
    "typescript",
    "guards",
    "narrowing"
  ]
}
